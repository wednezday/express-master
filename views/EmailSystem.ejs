<!-- views/EmailSystem.ejs -->

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Email System</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css">
    <link href="/css/sticky-footer.css" rel="stylesheet">

</head>

<body>
    <div class="container">
        <%- include('partials/navbar') %>
        <div class=" col-lg-10 col-md-9 col-sm-9">

          <div class="form-group">
            <a class="btn btn-primary" href="/NewEmailSystem">NEW</a>
          </div>

          <div class="panel panel-default">
            <div class="panel-heading">
              <h1 class="panel-title">Email System</h1>
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                  <table id='dataTables-example2' name='tableES' class='table table-striped table-bordered'>
                    <thead>
                      <tr>
                        <th class='sorting'>Email</th>
                        <th class='sorting'>Detail</th>
                        <th width='150px' style='text-align:center'>Edit & Delete</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% posts.forEach((post) => { %>

                          <tr>

                              <td><%= post.Email %></td>
                              <td><%= post.Detail %></td>
                              <td align="center" valign="middle"><a href="/EditEmailSystem/<%= post.IDEmailSystem %>"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                          </tr>

                       <% }) %>
                    </tbody>
                  </table>
                </div>
            </div>
          </div>
        </div>



    </div>
    <%- include('partials/footer') %>
</body>
<script>
  $(document).ready(function() {
    $('#dataTables-example2').DataTable();
  } );
</script>
</html>
